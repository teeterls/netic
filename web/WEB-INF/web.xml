<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>titulo</param-name>
        <param-value>Netic</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletRegistro</servlet-name>
        <servlet-class>servlets.ServletRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdateUsuario</servlet-name>
        <servlet-class>servlets.ServletUpdateUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAcceso</servlet-name>
        <servlet-class>servlets.ServletAcceso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletController</servlet-name>
        <servlet-class>servlets.ServletController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDesconexion</servlet-name>
        <servlet-class>servlets.ServletDesconexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBusqueda</servlet-name>
        <servlet-class>servlets.ServletBusqueda</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>ServletImagen</servlet-name>
    	<servlet-class>servlets.ServletImagen</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>ServletCarrito</servlet-name>
    	<servlet-class>servlets.ServletCarrito</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>ServletAjax</servlet-name>
        <servlet-class>servlets.ServletAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdministrarPerfil</servlet-name>
        <servlet-class>servlets.ServletAdministrarPerfil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEstadisticas</servlet-name>
        <servlet-class>servlets.ServletEstadisticas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPermisos</servlet-name>
        <servlet-class>servlets.ServletPermisos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegistro</servlet-name>
        <url-pattern>/ServletRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdateUsuario</servlet-name>
        <url-pattern>/ServletUpdateUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAcceso</servlet-name>
        <url-pattern>/ServletAcceso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletController</servlet-name>
        <url-pattern>/ServletController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDesconexion</servlet-name>
        <url-pattern>/ServletDesconexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBusqueda</servlet-name>
        <url-pattern>/ServletBusqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCarrito</servlet-name>
        <url-pattern>/ServletCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletImagen</servlet-name>
        <url-pattern>/ServletImagen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdministrarPerfil</servlet-name>
        <url-pattern>/ServletAdministrarPerfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAjax</servlet-name>
        <url-pattern>/ServletAjax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEstadisticas</servlet-name>
        <url-pattern>/ServletEstadisticas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPermisos</servlet-name>
        <url-pattern>/ServletPermisos</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <cookie-config>
			<http-only>true</http-only>
		</cookie-config>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    

</web-app>